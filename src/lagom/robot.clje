(ns lagom.robot
  (:require [clojure.string :as str]))

(def possible-messages
  ["Lagom!" "Lagom?" "Lagom..." "Lagom."])

(defn- maybe-upper-case [msg]
  (if (< (rand-int 100) 20)
    (str/upper-case msg)
    msg))

(defn* reply
  ([nil] "Sorry, I didn't get that")
  ([message]
   (->> (count possible-messages)
        rand-int
        (get possible-messages)
        maybe-upper-case)))
